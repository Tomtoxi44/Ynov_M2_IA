@page "/reservation"
@using TimeTravelAgency.Models
@using TimeTravelAgency.Services
@using ReservationModel = TimeTravelAgency.Models.Reservation
@inject DestinationService DestinationService
@inject ReservationService ReservationService
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>Réserver votre voyage - TimeTravel Agency</PageTitle>

<section class="section" style="padding-top: 120px;">
    <div class="container">
        <div class="section-header">
            <h1>Réservez votre voyage temporel</h1>
            <div class="gold-line"></div>
            <p>Remplissez le formulaire ci-dessous pour réserver votre aventure à travers le temps.</p>
        </div>
        
        @if (reservationSuccess)
        {
            <div class="reservation-success">
                <div class="success-icon">✓</div>
                <h2>Réservation confirmée !</h2>
                <p>Votre demande de réservation a été enregistrée avec succès. Notre équipe vous contactera dans les plus brefs délais pour finaliser votre voyage temporel.</p>
                <p><strong>Référence :</strong> TT-@DateTime.Now.ToString("yyyyMMdd")-@(new Random().Next(1000, 9999))</p>
                <a href="/" class="btn btn-primary mt-4">Retour à l'accueil</a>
            </div>
        }
        else
        {
            <div class="reservation-form-container">
                <EditForm Model="reservation" OnValidSubmit="HandleSubmit" FormName="reservationForm">
                    <DataAnnotationsValidator />
                    
                    <div class="form-grid">
                        <div class="form-section">
                            <h3>Informations personnelles</h3>
                            
                            <div class="form-group">
                                <label class="form-label" for="fullname">Nom complet *</label>
                                <InputText id="fullname" class="form-input" @bind-Value="reservation.FullName" placeholder="Jean Dupont" />
                                <ValidationMessage For="() => reservation.FullName" class="form-error" />
                            </div>
                            
                            <div class="form-group">
                                <label class="form-label" for="email">Email *</label>
                                <InputText id="email" class="form-input" @bind-Value="reservation.Email" placeholder="jean.dupont@email.com" />
                                <ValidationMessage For="() => reservation.Email" class="form-error" />
                            </div>
                            
                            <div class="form-group">
                                <label class="form-label" for="phone">Téléphone *</label>
                                <InputText id="phone" class="form-input" @bind-Value="reservation.Phone" placeholder="+33 6 12 34 56 78" />
                                <ValidationMessage For="() => reservation.Phone" class="form-error" />
                            </div>
                        </div>
                        
                        <div class="form-section">
                            <h3>Détails du voyage</h3>
                            
                            <div class="form-group">
                                <label class="form-label" for="destination">Destination *</label>
                                <InputSelect id="destination" class="form-input" @bind-Value="reservation.DestinationId">
                                    <option value="0">Sélectionnez une destination</option>
                                    @foreach (var dest in destinations)
                                    {
                                        <option value="@dest.Id">@dest.Name - @dest.Price.ToString("N0") €</option>
                                    }
                                </InputSelect>
                                <ValidationMessage For="() => reservation.DestinationId" class="form-error" />
                            </div>
                            
                            <div class="form-group">
                                <label class="form-label" for="date">Date de départ *</label>
                                <InputDate id="date" class="form-input" @bind-Value="reservation.DepartureDate" min="@DateTime.Now.AddDays(7).ToString("yyyy-MM-dd")" />
                                <ValidationMessage For="() => reservation.DepartureDate" class="form-error" />
                            </div>
                            
                            <div class="form-group">
                                <label class="form-label" for="travelers">Nombre de voyageurs *</label>
                                <InputNumber id="travelers" class="form-input" @bind-Value="reservation.NumberOfTravelers" min="1" max="10" />
                                <ValidationMessage For="() => reservation.NumberOfTravelers" class="form-error" />
                            </div>
                            
                            <div class="form-group">
                                <label class="form-label" for="requests">Demandes spéciales</label>
                                <InputTextArea id="requests" class="form-textarea" @bind-Value="reservation.SpecialRequests" 
                                    placeholder="Régime alimentaire, besoins particuliers, questions..." />
                            </div>
                        </div>
                    </div>
                    
                    @if (selectedDestination != null)
                    {
                        <div class="reservation-summary">
                            <h3>Récapitulatif</h3>
                            <div class="summary-grid">
                                <div class="summary-item">
                                    <span>Destination</span>
                                    <strong>@selectedDestination.Name</strong>
                                </div>
                                <div class="summary-item">
                                    <span>Durée</span>
                                    <strong>@selectedDestination.Duration jours</strong>
                                </div>
                                <div class="summary-item">
                                    <span>Voyageurs</span>
                                    <strong>@reservation.NumberOfTravelers</strong>
                                </div>
                                <div class="summary-item summary-total">
                                    <span>Total estimé</span>
                                    <strong class="text-gold">@((selectedDestination.Price * reservation.NumberOfTravelers).ToString("N0")) €</strong>
                                </div>
                            </div>
                        </div>
                    }
                    
                    <div style="text-align: center; margin-top: 2rem;">
                        <button type="submit" class="btn btn-primary btn-lg" disabled="@isSubmitting">
                            @if (isSubmitting)
                            {
                                <span class="spinner" style="display: inline-block; margin-right: 0.5rem;"></span>
                                <span>Traitement...</span>
                            }
                            else
                            {
                                <span>Confirmer la réservation</span>
                            }
                        </button>
                    </div>
                </EditForm>
            </div>
        }
    </div>
</section>

<style>
    .reservation-form-container {
        max-width: 900px;
        margin: 0 auto;
        background: var(--color-bg-card);
        border: 1px solid var(--color-border);
        border-radius: var(--border-radius-lg);
        padding: 2.5rem;
    }
    
    .form-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
        gap: 3rem;
    }
    
    .form-section h3 {
        margin-bottom: 1.5rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid var(--color-border);
    }
    
    .reservation-summary {
        background: var(--color-bg-tertiary);
        border-radius: var(--border-radius-md);
        padding: 1.5rem;
        margin-top: 2rem;
    }
    
    .reservation-summary h3 {
        margin-bottom: 1rem;
        font-size: 1.125rem;
    }
    
    .summary-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
        gap: 1rem;
    }
    
    .summary-item {
        display: flex;
        flex-direction: column;
        gap: 0.25rem;
    }
    
    .summary-item span {
        font-size: 0.875rem;
        color: var(--color-text-secondary);
    }
    
    .summary-total strong {
        font-size: 1.5rem;
    }
    
    .reservation-success {
        max-width: 600px;
        margin: 0 auto;
        text-align: center;
        background: var(--color-bg-card);
        border: 1px solid var(--color-border);
        border-radius: var(--border-radius-lg);
        padding: 3rem;
    }
    
    .success-icon {
        width: 80px;
        height: 80px;
        background: var(--color-success);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2.5rem;
        color: white;
        margin: 0 auto 1.5rem;
    }
    
    .reservation-success h2 {
        margin-bottom: 1rem;
        color: var(--color-success);
    }
    
    .reservation-success p {
        margin: 0 auto 1rem;
        max-width: 100%;
    }
</style>

@code {
    [SupplyParameterFromQuery]
    public int? Destination { get; set; }
    
    private ReservationModel reservation = new();
    private List<TimeTravelAgency.Models.Destination> destinations = new();
    private TimeTravelAgency.Models.Destination? selectedDestination;
    private bool isSubmitting = false;
    private bool reservationSuccess = false;

    protected override void OnInitialized()
    {
        destinations = DestinationService.GetAllDestinations();
        
        if (Destination.HasValue)
        {
            reservation.DestinationId = Destination.Value;
        }
        
        UpdateSelectedDestination();
    }

    protected override void OnParametersSet()
    {
        UpdateSelectedDestination();
    }

    private void UpdateSelectedDestination()
    {
        if (reservation.DestinationId > 0)
        {
            selectedDestination = DestinationService.GetDestinationById(reservation.DestinationId);
        }
        else
        {
            selectedDestination = null;
        }
    }

    private async Task HandleSubmit()
    {
        if (reservation.DestinationId == 0)
        {
            return;
        }
        
        isSubmitting = true;
        StateHasChanged();

        // Simulation d'un délai de traitement
        await Task.Delay(1500);

        await ReservationService.CreateReservationAsync(reservation);
        
        isSubmitting = false;
        reservationSuccess = true;
        StateHasChanged();
    }
}
